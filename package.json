{
  "name": "lamina",
  "private": true,
  "version": "1.1.2",
  "description": "üç∞ An extensable, layer based shader material for ThreeJS.",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "**"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./index.d.ts",
      "require": "./index.cjs.js",
      "import": "./index.js"
    },
    "./vanilla": {
      "types": "./vanilla.d.ts",
      "require": "./vanilla.cjs.js",
      "import": "./vanilla.js"
    }
  },
  "keywords": [
    "react",
    "shaders",
    "layers",
    "materials",
    "threejs",
    "webgl",
    "3d"
  ],
  "scripts": {
    "start": "tsc --emitDeclarationOnly && rollup -c -w",
    "build": "rollup -c",
    "postbuild": "tsc --emitDeclarationOnly && cp package.json dist/package.json",
    "release": "chmod +x ./scripts/publish.sh && ./scripts/publish.sh",
    "patchJSON": "json -I -f dist/package.json -e \"this.private=false;\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pmndrs/lamina.git"
  },
  "author": "Faraz Shaikh <farazzshaikh@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pmndrs/lamina/issues"
  },
  "devDependencies": {
    "@babel/core": "7.17.5",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-transform-modules-commonjs": "7.16.8",
    "@babel/plugin-transform-parameters": "7.16.7",
    "@babel/plugin-transform-runtime": "7.17.0",
    "@babel/plugin-transform-template-literals": "7.16.7",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.0",
    "@react-three/fiber": "^7.0.26",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "@types/three": "^0.138.0",
    "json": "^11.0.0",
    "lint-staged": "^12.3.5",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-merge-refs": "^1.1.0",
    "rollup": "^2.59.0",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^7.0.2",
    "three": "^0.138.3",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "glsl-token-descope": "^1.0.2",
    "glsl-token-functions": "^1.0.1",
    "glsl-token-string": "^1.0.1",
    "glsl-tokenizer": "^2.1.5",
    "leva": "^0.9.20",
    "three-custom-shader-material": "^3.2.7"
  }
}
